@{
    ViewBag.Title = "AllOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/timeStyles.css")
@model IEnumerable<PfitBlogApplication.Models.Order>

<h2>Все заказы</h2>

Все сделанные заказы:

<div align="center">
<table class="simple-little-table" cellspacing='0'>
    <tr>
        <th>
            Отправление
        </th>
        <th class='even'>
            Прибытие
        </th>
        <th>
            Количество мест
        </th>
        <th class='even'>
            Время
        </th>
        <th>
            Телефон клиента
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountPlaces)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>

    </tr>
}

</table>
</div>
