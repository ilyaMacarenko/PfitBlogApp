            @Html.DisplayFor(modelItem => item.IntervalStation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndWay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WayId }) |
            @Html.ActionLink("Details", "Details", new { id=item.WayId }) |
