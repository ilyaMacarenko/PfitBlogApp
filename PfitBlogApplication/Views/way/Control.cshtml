@model IEnumerable<PfitBlogApplication.Models.Way>

@{
    ViewBag.Title = "Index";
}

<h2>Поиск маршрута</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartWay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IntervalStation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndWay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
